VITE_MAPBOX_TOKEN=pk.eyJ1IjoiZXhhbXBsZSIsImEiOiJjaXl6aGVyc2UifQ.example

# Firebase Configuration (Production)
# Get these from Firebase Console > Project Settings > General > Your apps
# Leave empty for development (will use emulator defaults)
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Feature Flags (optional, defaults shown)
# Set to 'true' or 'false' to override defaults
# VITE_ENABLE_DEV_TOOLS=false        # Show dev tools in production (default: false in prod)
# VITE_ENABLE_DEBUG_PANEL=false      # Show debug panel (default: false in prod)
# VITE_VERBOSE_LOGGING=false         # Extra console logs (default: false in prod)
# VITE_ENABLE_DRIVER_WALLET=true     # Driver earnings/ledger (default: true)
# VITE_SINGLE_DRIVER_MODE=false      # Testing with single driver (default: false)
